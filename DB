CREATE TABLE `member`(
	loginId VARCHAR(50) PRIMARY KEY AUTO_INCREMENT
	, loginPw VARCHAR(255) UNIQUE
	, nickname VARCHAR(100)
	, email VARCHAR(100) UNIQUE
	, provider VARCHAR(20)
	, providerId VARCHAR(20)
	, `role` VARCHAR(20) NOT NULL
	, regDate DATETIME NOT NULL
	, updateDate DATETIME NOT NULL
	, `name` VARCHAR (50)
	, phone VARCHAR(15)
);
 CREATE TABLE userFeedback(
	id BIGINT(20) NOT NOT NULL PRIMARY KEY AUTO_INCREMENT
	, userId BIGINT(20) NOT NULL
	, adTextId BIGINT(20) NOT NULL
	, trustScore TINYINT(4) NOT NULL
	, regDate DATETIME DEFAULT CURRENT_TIMESTAMP()
 );
DESC banned_words(
	id BIGINT(20) NOT NULL PRIMARY KEY AUTO_INCREMENT
	, keyword VARCHAR(100) NOT NULL UNIQUE
	, lawType VARCHAR(30) 
	, DESCRIPTION TEXT 
	, isActive TINYINT(1) NOT NULL DEFAULT 1
	, regDate DATETIME CURRENT_TIMESTAMP()
); 

CREATE TABLE(
id bigtin(20) NOT NULL PRIMARY KEY AUTO_INCREMENT
, adTextId BIGINT(20) NOT NULL
, exgCount INT(11)
, banwordCount INT(11)
, riskScore DOUBLE
, highRiskSentences LONGTEXT
, summary texst
, regDAte datetie CURRENT_TIMESTAMP()
);

CREATE TABLE(
 id INT(11) PRIMARY KEY AUTO_INCREMENT
 , userId INT(11) NOT NULL
 , content TEXT NOT NULL
 , riskScore INT(11)
 , regDate DATETIME NOT NULL CURRENT_TIMESTAMP()
 , isPublic TINYINT(1)
 , publicAt DATETIME 
);